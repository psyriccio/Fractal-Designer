<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Sherlock.K" parent="Theme.HoloEverywhereDark.Sherlock">
        <item name="actionButtonStyle">@style/Widget.Sherlock.ActionButton.K</item>
        <item name="vpiTabPageIndicatorStyle">@style/Widget.TabPageIndicator</item>
        <item name="vpiTabTextStyle">@style/Widget.TabPageIndicator.Text</item>
        <item name="absForceOverflow">true</item>
    </style>
    <style name="TextAppearance.Widget.Title.K" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#FFF3F3F3</item>
        <item name="android:textSize">19sp</item>
    </style>
    <style name="TextAppearance.Widget.Subtitle.K" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#FFEEEEEE</item>
        <item name="android:textSize">13sp</item>
    </style>
    
    <style name="Widget.Sherlock.ActionButton.K" parent="android:Widget">
        <item name="android:background">?attr/actionBarItemBackground</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:minWidth">48dip</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:scaleType">center</item>
    </style>
    
    <style name="Widget.Sherlock.ActionButton.Kh" parent="android:Widget">
        <item name="android:background">?attr/actionBarItemBackground</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:minWidth">48dip</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingBottom">8dip</item>
        <item name="android:scaleType">center</item>
    </style>
    
</resources>